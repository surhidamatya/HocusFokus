<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!--style for the text view which shows running count down on Active Task Timer-->
    <style name="active_timer_text_style">

        <item name="android:textSize">@dimen/active_timer_current_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">@dimen/normal_margin</item>
    </style>

    <style name="count_down_timer_style">

        <item name="android:textSize">@dimen/count_down_timer_text_size</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:padding">@dimen/normal_padding</item>

    </style>

    <style name="active_task_listing_text_view_style">

        <item name="android:padding">@dimen/normal_padding</item>
        <item name="android:textSize">@dimen/active_task_text_size</item>

    </style>

    <style name="active_task_title_style">

        <item name="android:textSize">@dimen/active_task_text_size</item>
        <item name="android:textColor">@color/active_task_title</item>


    </style>

    <style name="active_task_string_style">

        <item name="android:textSize">@dimen/active_task_title_text_size</item>
        <item name="android:textColor">@color/active_task_string</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="empty_text_style">
        <item name="android:textSize">@dimen/empty_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--style for the text view showing current date in new task activity-->
    <style name="new_task_current_date_style">

        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/normal_margin</item>

    </style>

</resources>
