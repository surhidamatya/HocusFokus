<resources>

    <style name="RippleViewStyle" parent="Material.Drawable.Ripple">
        <item name="rd_rippleColor">@color/grey_fade</item>
        <item name="rd_rippleType">touch</item>
        <item name="rd_cornerRadius">0dp</item>
        <item name="rd_maskType">rectangle</item>
        <item name="rd_maxRippleRadius">match_view</item>
        <item name="rd_backgroundAnimDuration">300</item>
        <item name="rd_rippleAnimDuration">300</item>
        <item name="rd_backgroundColor">@android:color/transparent</item>
    </style>

    <style name="SimpleDialogLight" parent="Material.App.Dialog.Simple.Light">
        <item name="di_inAnimation">@anim/anim_scale_in</item>
        <item name="di_outAnimation">@anim/anim_scale_out</item>
    </style>

    <style name="WatchDialogAnimation" parent="Material.App.Dialog.Simple.Light">
        <item name="android:windowEnterAnimation">@anim/anim_scale_in</item>
        <item name="android:windowExitAnimation">@anim/anim_scale_out</item>
    </style>

    <style name="NotImplementedYet">
        <item name="android:textSize">@dimen/abc_text_size_headline_material</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/titleTextColor</item>
    </style>

    <style name="Title.Expanded" parent="Title">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Title.collapsed" parent="Title">
        <item name="android:textSize">@dimen/abc_text_size_title_material_toolbar</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="horizontal_divider">
        <item name="android:layout_height">@dimen/horizontal_divider_height</item>
        <item name="android:background">@color/single_day_task_divider</item>
    </style>

    <style name="material_design_padding">

        <item name="android:paddingTop">@dimen/padding_top</item>
        <item name="android:paddingLeft">@dimen/padding_left</item>
        <item name="android:paddingRight">@dimen/padding_right</item>
    </style>


</resources>
